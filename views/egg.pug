extends layout

block content
  h1= title
  p Welcome to #{title}
  - let items = results
  div(class="container-fluid")
    div(class="col m-1")
      each egg, index in items
        - let destination = `dispatch(\"/egg/update?id=${egg._id}\")`
        div(class="row-sm-2" class="m-1")  Item #{egg.egg_Itemname}(#{egg.egg_Quantity}) is $#{egg.egg_price}
        button.btn( class="btn-primary ml-1", onclick= destination) Update

        button.btn( class="btn-success m-1", onclick= destination1) Details
          button.btn( class="btn-danger m-1", onclick= destination2) Delete
  
  script. 
    function dispatch(path){ 
      window.location.href=path 
    }